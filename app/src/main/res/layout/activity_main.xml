<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simonapp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hillaryslavik.myfirstapp.MainActivity">

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/redSquare"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="50dp"
        android:background="#ff0000" />

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/blueSquare"
        android:layout_alignTop="@+id/redSquare"
        android:layout_toRightOf="@+id/redSquare"
        android:layout_toEndOf="@+id/redSquare"
        android:background="#0011ff" />

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/yellowSquare"
        android:layout_below="@+id/redSquare"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:background="#fffb00" />

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/greenSquare"
        android:layout_below="@+id/redSquare"
        android:layout_toRightOf="@+id/redSquare"
        android:layout_toEndOf="@+id/redSquare"
        android:background="#0ea400" />

    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="New Game"
        android:id="@+id/startButton"
        android:layout_below="@+id/yellowSquare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="24dp"
        android:background="#6c6c6c"
        android:typeface="monospace"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="0"
        android:textSize="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:editable="false"
        android:focusable="false"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highScore"
        android:layout_alignBottom="@+id/score"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:textSize="42dp"
        android:layout_marginRight="45dp"
        android:editable="false"
        android:focusable="false"
        />

</RelativeLayout>
